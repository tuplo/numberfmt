{
  "name": "@tuplo/numberfmt",
  "description": "",
  "version": "0.0.0-development",
  "repository": "git@github.com:tuplo/numberfmt.git",
  "author": "Rui Costa",
  "license": "MIT",
  "keywords": [
    "numbers",
    "formatting"
  ],
  "files": [
    "cjs/index.js",
    "dist/index.mjs",
    "dist/index.d.ts"
  ],
  "main": "./cjs/index.js",
  "module": "./dist/index.mjs",
  "types": "dist/index.d.ts",
  "engines": {
    "node": ">=12"
  },
  "devDependencies": {
    "@types/jest": "27.4.0",
    "@types/node": "17.0.8",
    "@typescript-eslint/eslint-plugin": "5.9.1",
    "@typescript-eslint/parser": "5.9.1",
    "esbuild": "0.14.11",
    "eslint": "8.6.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "16.1.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-import": "2.25.4",
    "eslint-plugin-jest": "25.7.0",
    "jest": "27.4.7",
    "nyc": "15.1.0",
    "prettier": "2.5.1",
    "rimraf": "3.0.2",
    "ts-jest": "27.1.3",
    "typescript": "4.5.4"
  },
  "scripts": {
    "build": "bash scripts/build.sh",
    "lint:ts": "tsc --noEmit",
    "lint": "eslint src --ext ts",
    "test:ci:coverage": "bash ./scripts/coverage.sh",
    "test:ci": "LANG=en-GB jest --ci",
    "test": "LANG=en-GB jest --watch"
  },
  "release": {
    "branches": [
      "main"
    ]
  },
  "jest": {
    "roots": [
      "<rootDir>/src"
    ],
    "testEnvironment": "node",
    "transform": {
      "^.+\\.(t|j)sx?$": "ts-jest"
    }
  },
  "eslintConfig": {
    "extends": [
      "airbnb-base",
      "airbnb-typescript/base",
      "prettier",
      "plugin:@typescript-eslint/recommended",
      "plugin:import/typescript",
      "plugin:jest/all"
    ],
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint",
      "jest"
    ],
    "parserOptions": {
      "ecmaVersion": 9,
      "project": "./tsconfig.json"
    },
    "env": {
      "node": true,
      "jest": true
    },
    "rules": {
      "jest/no-hooks": "off",
      "@typescript-eslint/comma-dangle": "off",
      "jest/no-identical-title": "off"
    },
    "overrides": [
      {
        "files": [
          "**/*.ts"
        ],
        "rules": {
          "no-undef": "off"
        }
      }
    ]
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5",
    "printWidth": 80
  }
}
