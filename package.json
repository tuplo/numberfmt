{
  "name": "@tuplo/numberfmt",
  "description": "",
  "version": "0.0.0-development",
  "repository": "git@github.com:tuplo/numberfmt.git",
  "author": "Rui Costa",
  "license": "MIT",
  "keywords": [
    "numbers",
    "formatting"
  ],
  "files": [
    "dist/index.js",
    "dist/index.d.ts"
  ],
  "engines": {
    "node": ">=12"
  },
  "type": "module",
  "main": "./dist/index.js",
  "exports": "./dist/index.js",
  "types": "dist/index.d.ts",
  "devDependencies": {
    "@types/jest": "26.0.23",
    "@types/node": "15.0.3",
    "@typescript-eslint/eslint-plugin": "4.23.0",
    "@typescript-eslint/parser": "4.23.0",
    "esbuild": "0.11.20",
    "eslint": "7.26.0",
    "eslint-config-airbnb-typescript": "12.3.1",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-jest": "24.3.6",
    "jest": "26.6.3",
    "prettier": "2.3.0",
    "rimraf": "3.0.2",
    "ts-jest": "26.5.6",
    "typescript": "4.2.4"
  },
  "scripts": {
    "build": "bash scripts/build.sh",
    "ci:test": "LANG=en-GB jest --ci",
    "ci:test:coverage": "LANG=en-GB jest --ci --coverage",
    "lint": "eslint src --ext ts",
    "test": "LANG=en-GB jest --watch",
    "ts-check": "tsc --noEmit"
  },
  "release": {
    "branches": [
      "main"
    ]
  },
  "jest": {
    "roots": [
      "<rootDir>/src"
    ],
    "testEnvironment": "node",
    "transform": {
      "^.+\\.(t|j)sx?$": "ts-jest"
    }
  },
  "eslintConfig": {
    "extends": [
      "airbnb-typescript/base",
      "prettier",
      "plugin:@typescript-eslint/recommended",
      "plugin:import/typescript",
      "plugin:jest/all"
    ],
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint",
      "jest"
    ],
    "parserOptions": {
      "ecmaVersion": 9,
      "project": "./tsconfig.json"
    },
    "env": {
      "node": true,
      "jest": true
    },
    "rules": {
      "jest/no-hooks": "off",
      "@typescript-eslint/comma-dangle": "off",
      "jest/no-identical-title": "off"
    },
    "overrides": [
      {
        "files": [
          "**/*.ts"
        ],
        "rules": {
          "no-undef": "off"
        }
      }
    ]
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5",
    "printWidth": 80
  }
}
